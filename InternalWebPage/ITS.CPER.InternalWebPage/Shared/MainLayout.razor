@using MudBlazor;
@inherits LayoutComponentBase

<PageTitle>ITS.CPER.InternalWebPage</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Style="@($"background-color: #03043a; color:{Colors.LightGreen.Accent4};")">
        <MudContainer Style="display:flex; flex-direction:row; justify-content:flex-start">
            <MudImage Style="width: 30%" Src="images/logo.png" Alt="Earth4Sport" />
        </MudContainer>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">ITS.CPER.InternalWebPage</MudText>
        </MudDrawerHeader>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}