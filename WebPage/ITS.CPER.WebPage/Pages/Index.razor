                        <MudText>Start: ...</MudText>
                        <MudText>End ...</MudText>
                    </MudCardContent>
                </MudCard>
            </MudPaper>
            @*<MudCard Class="rightside">
                <MudCardHeader>
                    <CardHeaderContent>
