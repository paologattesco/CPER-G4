            .card{
                background-color: lightgrey;
                height: 500px;
                border-radius: 25px;
                width: 100%;
            }

            .card .leftside{
                display: flex;
                width: 25%;
                height: 100%;
                background-color: whitesmoke;
                border-top-left-radius: 25px;
                border-bottom-left-radius: 25px;
                padding: 50px;
            }

            .card .leftside .sessionCard{
                border-radius: 25px;
                width: 100%;
                height: 100%;
            }

            .card .leftside .sessionCard .startEnd{
                
            }

            .card .rightside {
                display: flex;
                width: 25%;
                height: 100%;
