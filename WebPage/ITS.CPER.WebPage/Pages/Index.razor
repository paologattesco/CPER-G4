        <MudPaper Class="card" Elevation="3">
            <MudPaper Class="leftside" Elevation="0">
                <MudCard Class="sessionCard">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">Session #1</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Secondary" aria-label="add to favorite"></MudIconButton>
