@using Microsoft.AspNetCore.Identity
@using MudBlazor;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="@($"color:{Colors.LightGreen.Accent4};")">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                <button type="submit" class="nav-link btn" style="@($"color:{Colors.LightGreen.Accent4};")">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
         <a class="nav-link" asp-area="Identity" asp-page="/Account/Register" style="@($"color:{Colors.LightGreen.Accent4};")">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login" style="@($"color:{Colors.LightGreen.Accent4};")">Login</a>
    </li>
}
</ul>
