@inherits LayoutComponentBase

<PageTitle>ITS.CPER.WebPage</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Style="@($"background-color:{Colors.Grey.Darken4}; color:{Colors.LightGreen.Accent4};")">
        <MudContainer Style="display:flex; flex-direction:row; align-items:center; padding:0px">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <MudText Style="font-size:x-large">Earth4Sport</MudText>
        </MudContainer>
        <MudContainer Style="display:flex; flex-direction:row; align-items:center; justify-content:flex-end; padding:0px">
            <LoginDisplay />
        </MudContainer>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">ITS.CPER.WebPage</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}